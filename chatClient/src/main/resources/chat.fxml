<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.postlife.javaChatClient.Controller">
    <HBox fx:id="authPanel">
        <TextField fx:id="usernameField" onAction="#tryAuth" promptText="Type your nickname..." HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#tryAuth" text="Connect">
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="chatArea" editable="false" focusTraversable="false" wrapText="true" HBox.hgrow="ALWAYS"/>
        <ListView onMouseClicked="#clientsListDoubleClick" fx:id="clientsListView" visible="false" managed="false" minWidth="180" maxWidth="180"/>
    </HBox>
    <Separator prefWidth="200.0"/>
    <HBox fx:id="msgPanel" managed="false" visible="false">
        <TextField fx:id="textMessageArea" onKeyPressed="#sendMessageWithArea"
                   HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="sendButton" mnemonicParsing="false"
                onAction="#sendMessage" text="Send">
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
